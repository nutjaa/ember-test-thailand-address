      extra=(hash labelPath="amphoe")
      as |item select|}}
      {{item.district}} » {{highlight-substr item.amphoe select.lastSearchedText}} » {{item.province}} » {{item.zipcode}}
    {{/power-select-typeahead}}
  </div>
</div>

