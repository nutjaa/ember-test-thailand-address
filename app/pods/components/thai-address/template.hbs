<div class="row">
  <div class="col-md-6">
    <h2>ตำบล / แขวง</h2>
    {{#power-select-typeahead search=(action 'searchBySubDistrict')
      selected=address
      noMatchesMessage='Not found'
      oninput=(action "skipShortSearches")
      onchange=(action (mut address))
      extra=(hash labelPath="district")
      as |item select|}}
      {{highlight-substr item.district select.lastSearchedText}} » {{item.amphoe}} » {{item.province}} » {{item.zipcode}}
    {{/power-select-typeahead}}
  </div>
  <div class="col-md-6">
    <h2>อำเภอ / เขต</h2>
    {{#power-select-typeahead search=(action 'searchByDistrict')
      selected=address
      noMatchesMessage='Not found'
      oninput=(action "skipShortSearches")
